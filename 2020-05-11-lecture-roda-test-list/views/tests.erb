<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Список тестов</h3>
  </div>

  <div class="large-12 cell">
    <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Дата</th>
        <th>Описание</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each_test do |test| %>
        <tr>
          <td><%= test.name %></td>
          <td><%= test.date %></td>
          <td><%= test.description %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
